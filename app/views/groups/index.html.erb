<h1>Listing groups</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Min bet</th>
    <th>Max bet</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Starting funds</th>
    <th>Join price</th>
    <th>Password</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @groups.each do |group| %>
  <tr>
    <td><%= group.name %></td>
    <td><%= group.min_bet %></td>
    <td><%= group.max_bet %></td>
    <td><%= group.start_date %></td>
    <td><%= group.end_date %></td>
    <td><%= group.starting_funds %></td>
    <td><%= group.join_price %></td>
    <td><%= group.password %></td>
    <td><%= link_to 'Show', group %></td>
    <td><%= link_to 'Edit', edit_group_path(group) %></td>
    <td><%= link_to 'Destroy', group, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

